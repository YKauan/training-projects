    Default aFocus                := {.T., "background-color: #313866;"}
    Default aHover                := {.T., "border: 3px solid #313866;"}
    Default cBorder               := "none"
    Default cRadius               := "5px"
    Default cColor                := "white"
    Default cBackground           := "#3A506B"
    Default cSelectionBackground  := "#313866"
    Default cFontSize             := "13px"
    Default cBackgroundAttachment := "fixed"
    Default cPaddingLeft          := "5px"

    Local QLineEdit :=  " QLineEdit{"                                                       +;
                        "   border:" + cBorder + ";"                                        +;
                        "   border-radius:" + cRadius + ";"                                 +;
                        "   background-color:" + cBackground + ";"                          +;
                        "   selection-background-color:" + cSelectionBackground + ";"       +;
