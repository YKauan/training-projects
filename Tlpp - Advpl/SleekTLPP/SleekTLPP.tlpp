---------------------------------------------------------------------------------------------/*/
Method TSimpleEditorQCss( aFocus As Array, aHover As Array, cBorder As Character, cRadius As Character, cColor As Character, cBackground As Character, cSelectionBackground As Character, cFontSize As Character, cBackgroundAttachment As Character, cPaddingLeft As Character ) Class SleekTLPP

    Default aFocus                := {.T., "background-color: #1C2541;"}
    Default aHover                := {.T., "border: 3px solid #313866;"}
    Default cBorder               := "1px solid #313866"
    Default cRadius               := "5px"
    Default cColor                := "white"
    Default cBackground           := "#3A506B"
    Default cSelectionBackground  := "#313866"
    Default cFontSize             := "14px"
    Default cBackgroundAttachment := "fixed"
    Default cPaddingLeft          := "3px"

    Local QTextEdit :=  " QTextEdit{"                                                       +;
                        "   border:" + cBorder + ";"                                        +;
                        "   border-radius:" + cRadius + ";"                                 +;
                        "   background-color:" + cBackground + ";"                          +;
                        "   selection-background-color:" + cSelectionBackground + ";"       +;
                        "   color:" + cColor + ";"                                          +;
                        "   font-size: " + cFontSize + ";"                                  +;
                        "   background-attachment: " + cBackgroundAttachment + ";"          +;
                        "   padding-left: " + cPaddingLeft + ";"                            +;
                        " }"

    If aFocus[1] //=> If the style is active
        QTextEdit += " QTextEdit::focus {" + aFocus[2] + "}"
    EndIf

    If aHover[1] //=> If the style is active
        QTextEdit += " QTextEdit::hover {" + aHover[2] + "}"
    EndIf

Return( QTextEdit )

